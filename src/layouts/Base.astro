---
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
import Logo from '../components/Logo.astro';

// Si el título es el eslogan principal, mostrar solo "Use&Keep" en la pestaña
const pageTitle = title === "Pequeñas cosas que se quedan contigo" 
  ? "Use&Keep" 
  : `${title} | Use&Keep`;
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{pageTitle}</title>
  <meta name="description" content={description}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:type" content="website">
  <link rel="stylesheet" href={`${import.meta.env.BASE_URL}styles/global.css`}>
</head>
<body>
  <header class="header">
    <nav class="nav">
      <div class="nav-brand">
        <Logo size="28" />
        <a href="/">Use&Keep</a>
      </div>
      <ul class="nav-menu">
        <li><a href="/">Inicio</a></li>
        <li><a href="/casa/">Casa</a></li>
        <li><a href="/trabajo/">Trabajo</a></li>
        <li><a href="/creatividad/">Creatividad</a></li>
        <li><a href="/mascotas/">Mascotas</a></li>
        <li><a href="/familia/">Familia</a></li>
        <li><a href="/salud/">Salud</a></li>
      </ul>
    </nav>
  </header>

  <main>
    <slot />
  </main>

  <footer class="footer">
    <p>&copy; 2024 Use&Keep. <a href="/divulgacion/">Divulgación de afiliados</a></p>
  </footer>
</body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    line-height: 1.6;
    color: #2D3436;
    background: linear-gradient(180deg, #F8F7F5 0%, #F9F9F8 50%, #F8F7F5 100%);
    background-attachment: fixed;
  }

  .header {
    background: white;
    border-bottom: 1px solid #E8F0EB;
    position: sticky;
    top: 0;
    z-index: 100;
    box-shadow: 0 2px 12px rgba(127, 168, 149, 0.08);
    backdrop-filter: blur(10px);
  }

  .nav {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 75px;
  }

  .nav-brand {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    text-decoration: none;
    color: #2D3436;
  }

  .nav-brand a {
    font-size: 1.4rem;
    font-weight: 800;
    text-decoration: none;
    color: #2D3436;
    letter-spacing: -0.5px;
  }

  .nav-menu {
    display: flex;
    list-style: none;
    gap: 2.5rem;
  }

  .nav-menu a {
    text-decoration: none;
    color: #7FA895;
    font-size: 0.95rem;
    transition: all 0.3s ease;
    font-weight: 700;
    position: relative;
  }

  .nav-menu a::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: #7FA895;
    transition: width 0.3s ease;
  }

  .nav-menu a:hover {
    color: #2D3436;
  }

  .nav-menu a:hover::after {
    width: 100%;
  }

  main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 2rem;
    min-height: calc(100vh - 150px);
  }

  .footer {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(232, 240, 235, 0.2) 100%);
    border-top: 1px solid #E8F0EB;
    padding: 3rem 2rem;
    text-align: center;
    color: #7FA895;
    font-size: 0.9rem;
    position: relative;
  }

  .footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 100px;
    height: 1px;
    background: linear-gradient(to right, transparent, #7FA895, transparent);
  }

  .footer a {
    color: #7FA895;
    text-decoration: none;
    transition: all 0.3s ease;
    font-weight: 700;
  }

  .footer a:hover {
    color: #2D3436;
  }

  /* Animaciones y transiciones suaves */
  @media (prefers-reduced-motion: no-preference) {
    html {
      scroll-behavior: smooth;
    }
  }
</style>
