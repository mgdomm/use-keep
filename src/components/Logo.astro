---
interface Props {
  size?: string;
}

const { size = "32" } = Astro.props;
---

<svg
  width={size}
  height={size}
  viewBox="0 0 32 32"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  class="logo"
>
  <!-- U: línea izquierda -->
  <path
    d="M 5 5 L 5 17 Q 5 21 9 21 Q 13 21 13 17 L 13 5"
    stroke="#7FA895"
    stroke-width="2"
    stroke-linecap="round"
    fill="none"
  />

  <!-- K: línea vertical -->
  <path
    d="M 18 5 L 18 21"
    stroke="#7FA895"
    stroke-width="2"
    stroke-linecap="round"
    fill="none"
  />

  <!-- K: diagonal superior -->
  <path
    d="M 18 9 L 27 5"
    stroke="#7FA895"
    stroke-width="2"
    stroke-linecap="round"
    fill="none"
  />

  <!-- K: diagonal inferior -->
  <path
    d="M 18 13 L 27 21"
    stroke="#7FA895"
    stroke-width="2"
    stroke-linecap="round"
    fill="none"
  />
</svg>

<style>
  .logo {
    display: inline-block;
    vertical-align: middle;
  }
</style>
